{
  "compilerOptions": {
    "baseUrl": ".",// 解析非相对模块的基础地址，默认是当前目录
    "paths": {
    // 路径映射，相对于baseUrl
      "@/*":["src/*"],
      "api/*":["src/api"],
      "assets/*":["src/assets"],
      "components/*":["src/components"],
      "directives/*":["src/directives"],
      "layout/*":["src/layout"],
      "router/*":["src/router"],
      "store/*":["src/store"],
      "style/*":["src/style"],
      "utils/*":["src/utils"],
      "view/*":["src/view"],
    },
    "allowSyntheticDefaultImports": true
  },
}